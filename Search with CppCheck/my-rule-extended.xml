<?xml version="1.0"?>
<rule>
  <tokenlist>normal</tokenlist>
  <pattern><![CDATA[(?<!else { )if \( \w+ <=? \w+ \) { [^}]*? } else { if \( \w+ <=? \w+ \) { [^}]*? } }]]></pattern>
  <message>
    <id>ifClamp</id>
    <severity>style</severity>
    <summary>Consider replacing if-else-if with clamp(value, minval, maxval).</summary>
  </message>
</rule>
